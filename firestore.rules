rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Les administrateurs (tout utilisateur authentifié accédant au back-office) 
    // peuvent lister et écrire dans la collection des clients.
    match /clients/{clientId} {
      allow list, write: if request.auth != null;
      
      // Un client authentifié ne peut lire que son propre document.
      allow get: if request.auth != null && request.auth.uid == clientId;
    }
  }
}