
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Les administrateurs (tout utilisateur authentifié via le dashboard) peuvent lire et écrire sur tous les documents clients.
    // Les clients individuels ne peuvent lire que leur propre document.
    match /clients/{userId} {
      allow read: if request.auth != null && request.auth.uid == userId;
      allow write: if request.auth != null; // Permet aux admins connectés de créer/modifier
    }

    // Bloque toutes les autres lectures/écritures par défaut pour plus de sécurité
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
